{% extends 'base.html.twig' %}

{% block title %}Page Demo{% endblock %}

{% block body %}
<h1>{{ title }}</h1>
<div>{{ message }}</div>

{% if available %}
<p>Le prof est disponible</p>
{% endif %}

<ul>
  {# commentaire Twig #}
  {% for color in colors %}
  <li>{{color}}</li>
  {% endfor %}
</ul>

<table class="table table-striped table-bordered">
  {% for player in players %}
  <tr>
    <td>
      <a href="/player/{{player.id}}">{{player.name}}</a>
    </td>
    <td>{{player.num}}</td>
    <td>
      {% if player.substitute %}
      <span>Rempla√ßant</span>
      {% else %}
      <span>Titulaire</span>
      {% endif %}
    </td>
  </tr>
  {% endfor %}
</table>
{% endblock %}
